<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/main_screen_color">
    <Button
        android:id="@+id/btnMyVocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_my_vocabulary"/>
    <Button
        android:id="@+id/btnEditVocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_word"/>
    <Button
        android:id="@+id/btnLearnWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_learn_words"/>

</LinearLayout>